<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
	xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'>
	<ui:style>
	.jumbotron {
		padding: 60px 15px 30px;
		margin-bottom: 30px;
		color: inherit;
		background-color: #eee;
	}
	</ui:style>
	<b:Jumbotron styleName="{style.jumbotron}">

		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_8,MD_6,LG_4" offset="SM_2,MD_3,LG_4">
					<b.html:Div styleName="text-center">
						<b:Heading size="H1" text="Simple Blog" />
						<b.html:Paragraph>Using Bootstrap :)</b.html:Paragraph>
					</b.html:Div>
				</b:Column>
			</b:Row>
		</b:Container>

	</b:Jumbotron>


</ui:UiBinder>
