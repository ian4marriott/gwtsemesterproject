<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<g:HTMLPanel styleName="post-preview">
		<a href="#">
			<h2 class="post-title" ui:field="title"></h2>
			<h3 class="post-subtitle" ui:field="subtitle"></h3>
		</a>
		<p class="post-meta">
			Posted by
			<a href="#" ui:field="author"></a>
			on
			<span ui:field="date"></span>
		</p>
	</g:HTMLPanel>
</ui:UiBinder>
